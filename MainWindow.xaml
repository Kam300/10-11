<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListView" Height="200" Width="300">
    <Grid>
        <ListView Name="ProductListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Модель" DisplayMemberBinding="{Binding Model}" Width="100"/>
                    <GridViewColumn Header="Компания" DisplayMemberBinding="{Binding Company}" Width="100"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>